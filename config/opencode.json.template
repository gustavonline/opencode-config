{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "lm-studio": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "LM Studio",
      "options": {
        "baseURL": "{{LM_STUDIO_URL}}"
      },
      "models": {
        "local-model": {
          "name": "Local LLM"
        }
      }
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "unified-toolbox": {
      "type": "local",
      "command": ["node", "{{CONFIG_DIR}}/tools/toolbox-proxy.js"]
    }
  }
}
